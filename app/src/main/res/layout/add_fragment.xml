<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    tools:context=".presentation.fragments.AddFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        app:cardCornerRadius="15dp"
        android:backgroundTint="@color/background_container">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click to add your event image"
            android:textColor="@color/grey"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_condensed_regular"
            android:textSize="18sp"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="250dp"
        android:fontFamily="@font/roboto_condensed_regular"
        android:text="Event Title"
        android:textColor="@color/grey" />

    <EditText
        android:id="@+id/email_address_input_sign_in"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="280dp"
        android:layout_marginHorizontal="20dp"
        android:fontFamily="@font/open_sans"
        android:hint="Event Title"
        android:textColorHint="@color/grey"
        android:textSize="14sp"
        android:drawablePadding="10dp"
        android:paddingHorizontal="16dp"
        android:background="@drawable/input_background"
        android:ems="10"
        android:inputType="textPersonName"
        android:importantForAutofill="no"
        tools:ignore="TextFields" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="375dp"
        android:layout_marginHorizontal="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_condensed_regular"
            android:text="Day"
            android:textColor="@color/grey" />
        
        <Space
            android:layout_width="90dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_condensed_regular"
            android:text="Month"
            android:textColor="@color/grey" />

        <Space
            android:layout_width="90dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_condensed_regular"
            android:text="Time"
            android:textColor="@color/grey" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="400dp"
        android:layout_marginHorizontal="20dp">

        <EditText
            android:layout_width="95dp"
            android:layout_height="55dp"
            android:fontFamily="@font/open_sans"
            android:hint="Ex: 25"
            android:textColorHint="@color/grey"
            android:textSize="14sp"
            android:drawablePadding="10dp"
            android:paddingHorizontal="16dp"
            android:background="@drawable/input_background"
            android:ems="2"
            android:maxLength="2"
            android:inputType="number"
            android:importantForAutofill="no"
            tools:ignore="TextFields" />

        <Space
            android:layout_width="16dp"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_width="105dp"
            android:layout_height="55dp"
            android:fontFamily="@font/open_sans"
            android:hint="Ex: dec"
            android:textColorHint="@color/grey"
            android:textSize="14sp"
            android:drawablePadding="10dp"
            android:paddingHorizontal="16dp"
            android:background="@drawable/input_background"
            android:ems="10"
            android:maxLength="3"
            android:inputType="textPersonName"
            android:importantForAutofill="no"
            tools:ignore="TextFields" />

        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_width="105dp"
            android:layout_height="55dp"
            android:fontFamily="@font/open_sans"
            android:hint="Ex: 10:20"
            android:textColorHint="@color/grey"
            android:textSize="14sp"
            android:drawablePadding="10dp"
            android:paddingHorizontal="16dp"
            android:background="@drawable/input_background"
            android:ems="10"
            android:maxLength="5"
            android:inputType="textPersonName"
            android:importantForAutofill="no"
            tools:ignore="TextFields" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="500dp"
        android:fontFamily="@font/roboto_condensed_regular"
        android:text="Additional Information"
        android:textColor="@color/grey" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="525dp"
        android:layout_marginHorizontal="20dp"
        android:fontFamily="@font/open_sans"
        android:hint="Event Description"
        android:textColorHint="@color/grey"
        android:textSize="14sp"
        android:drawablePadding="10dp"
        android:paddingHorizontal="16dp"
        android:background="@drawable/input_background"
        android:ems="10"
        android:inputType="textMultiLine"
        android:importantForAutofill="no"
        tools:ignore="TextFields" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_action_background"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="40dp"
        android:text="Create Event"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:fontFamily="@font/roboto_condensed_regular"
        android:textSize="20sp"/>

</FrameLayout>