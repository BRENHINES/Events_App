<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/background_container"
    android:layout_marginHorizontal="10dp"
    app:cardCornerRadius="15dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/PopularCardImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/background"
        android:backgroundTint="@color/background_container"
        android:adjustViewBounds="true"
        app:shapeAppearanceOverlay="@style/roundedImageView"/>

    <TextView
        android:id="@+id/PopularCardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="45dp"
        android:fontFamily="@font/roboto_condensed_regular"
        android:text="Billie Eilish Concert"
        android:textColor="@color/white"
        android:textFontWeight="700"
        android:textSize="20sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="5dp">

        <TextView
            android:id="@+id/PopularCardCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:fontFamily="@font/roboto_condensed_regular"
            android:text="Concert"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="4dp"
            android:textColor="@color/grey"
            android:textFontWeight="700"
            android:textSize="18sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cardCornerRadius="5dp"
        android:backgroundTint="@color/white"
        android:layout_gravity="end"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/PopularCardDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="10"
            android:textColor="@color/background"
            android:fontFamily="@font/roboto_condensed_regular"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/PopularCardMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dec"
            android:textSize="14sp"
            android:layout_marginTop="30dp"
            android:textColor="@color/grey"
            android:fontFamily="@font/roboto_condensed_regular"
            android:layout_gravity="center_horizontal"/>

    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>