<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Event_App"
        tools:targetApi="31">
        <activity
            android:name=".presentation.HomePage"
            android:exported="false" />
        <activity
            android:name=".presentation.ResetPasswordPage"
            android:exported="false" />
        <activity
            android:name=".presentation.ResetPasswordSubmitPage"
            android:exported="false" />
        <activity
            android:name=".presentation.ForgotPasswordPage"
            android:exported="false" />
        <activity
            android:name=".presentation.SignUpPage"
            android:exported="false" />
        <activity
            android:name=".presentation.LoginPage"
            android:exported="false" />
        <activity
            android:name=".presentation.LoginChoicePage"
            android:exported="true"
            android:theme="@style/Theme.AnimatedSplash.MySplash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/logo_dark" />

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/background_container" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>